<%= javascript_include_tag :application %>
<!doctype html>
<html lang="en">
  <head>
    <title>Little Esty Shop</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all' %>
  </head>
  <body>
    <section id="navigation">
      <%= render 'shared/navbar' %>
    </section>
    <div class='container'>
      <%= render 'shared/flash' %>
      <%= yield %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
  </body>
  <footer >
    <span>GitHub Repo Name: <%= link_to @repo.name, @repo.url %></span><br>
    <span>Number of Pull Requests: <%= @repo.pull_requests %></span><br>
    <span>Contributors:
      <% @contributors.each do |contributor| %>
        <%= link_to contributor.name, contributor.url %> - <%= contributor.commits %> commits&emsp;
      <% end %></span>
  </footer>
</html>
