<h1><%= @merchant.name %>'s Discounts</h1>

<% @merchant.bulk_discounts.each do |discount| %>
  <ul>
    <div id='discount-<%= discount.id %>'>
      <li><%= link_to discount.percentage_discount, merchant_bulk_discount_path(@merchant, discount) %>% on <%= discount.quantity_threshold %> items</li>
    </div>
  </ul>
<% end %>